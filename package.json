{
  "name": "konsum",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin"
  ],
  "main": "./src/konsum-cli.mjs",
  "description": "collect resource usage in a home environment",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "konsum": "bin/konsum"
  },
  "scripts": {
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "prepare": "rollup -c",
    "start": "npm run prepare && node bin/konsum --config=config start",
    "pretest": "rollup -c",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/konsum-cli.mjs --section=API",
    "lint": "documentation lint ./src/konsum-cli.mjs"
  },
  "dependencies": {
    "commander": "^6.1.0",
    "config-expander": "^11.0.13",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.0",
    "konsum-db": "^1.8.1",
    "ldapts": "^2.7.0",
    "leveldown": "^5.6.0",
    "levelup": "^4.4.0",
    "mime-db": "^1.45.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.13.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.3.2",
    "documentation": "^13.0.2",
    "execa": "^4.0.3",
    "got": "^11.5.2",
    "npm-pkgbuild": "^6.12.9",
    "rollup": "^2.29.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-executable": "^1.6.0",
    "semantic-release": "^17.1.2",
    "tmp": "^0.2.1"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.2"
  },
  "engines": {
    "node": ">=14.13.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/k0nsti/konsum.git"
  },
  "bugs": {
    "url": "https://github.com/k0nsti/konsum/issues"
  },
  "homepage": "https://github.com/k0nsti/konsum#readme",
  "config": {
    "base": "/services/${name}/api",
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "home-automation",
    "backup": "etc/${name}/config.json",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "config/nginx.conf"
    },
    "depends": {
      "systemd": ">=246.6",
      "nginx-mainline": ">=1.19.3"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-node-app",
      "arlac77/template-github",
      "arlac77/template-nginx",
      "arlac77/template-pacman",
      "arlac77/template-rollup",
      "arlac77/template-systemd"
    ]
  }
}
