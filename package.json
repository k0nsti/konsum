{
  "name": "konsum",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/konsum-cli.mjs",
  "description": "collect resource usage in a home environment",
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "konsum": "bin/konsum"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/konsum-cli.mjs --section=API",
    "lint": "documentation lint src/konsum-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules -t /data/binaries/arch-linux/packages/{{arch}} pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "pretest": "npm run prepare",
    "start": "npm run prepare && node bin/konsum --config=config",
    "test": "ava"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "config-expander": "^10.0.1",
    "koa": "^2.7.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.3.2",
    "leveldown": "^4.0.1",
    "levelup": "^4.0.0",
    "systemd": "^0.3.1"
  },
  "devDependencies": {
    "ava": "^1.3.1",
    "c8": "^3.4.0",
    "documentation": "^9.3.0",
    "esm": "^3.2.13",
    "execa": "^1.0.0",
    "got": "^9.6.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^5.1.7",
    "rollup": "^1.6.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-executable": "^1.4.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "semantic-release": "^15.13.3",
    "tmp": "0.0.33"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/k0nsti/konsum.git"
  },
  "bugs": {
    "url": "https://github.com/k0nsti/konsum/issues"
  },
  "homepage": "https://github.com/k0nsti/konsum#readme",
  "ava": {
    "babel": false,
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "extensions": [
      "js",
      "mjs"
    ],
    "compileEnhancements": false
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "groups": "home-automation",
    "backup": "etc/${name}/config.json",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    },
    "depends": {
      "systemd": ">=241.0"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
